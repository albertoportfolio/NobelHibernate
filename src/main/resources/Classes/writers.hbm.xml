<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernateClasses">

    <class name="Writers" table="writers">

        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="author" column="author" type="string"/>
        <property name="awardYear" column="award_year" type="int"/>
        <property name="bio" column="bio" type="string"/>
        <property name="reason" column="reason" type="string"/>

    </class>

</hibernate-mapping>
